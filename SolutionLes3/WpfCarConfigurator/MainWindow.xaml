<Window x:Class="WpfCarConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCarConfigurator"
        mc:Ignorable="d"
        Title="Car Configurator" Height="450" Width="800">
    <!-- naam wijzigen -->

    <Grid  Margin="40">
        <Grid.ColumnDefinitions>            <ColumnDefinition Width="*" />
            <!-- op * zetten zodat het automatisch zal gaat aanpassen-->            <ColumnDefinition Width="*" />            <ColumnDefinition Width="*" />        </Grid.ColumnDefinitions>        <Grid.RowDefinitions>
            <RowDefinition Height="*" />        </Grid.RowDefinitions>        <!-- stackpanel => automatisch horizontaal, rij en kolom niet specifieren-->        <!-- eerste kolom-->        <StackPanel>            <Label FontStyle="Italic" FontWeight="Bold">NAAM EN KLEUR</Label>        </StackPanel>        <StackPanel Margin="0,150,0,0">
            <!-- volgorde: left > top > right > bottom -->            <Label FontStyle="Italic" FontWeight="Bold">ACCESSOIRES</Label>        </StackPanel>        <StackPanel  Margin="0,300,0,0">            <Label FontStyle="Italic" FontWeight="Bold">TOTAALPRIJS</Label>        </StackPanel>        <!-- tweede kolom-->            <StackPanel Grid.Column="1" Margin="0,0,8,0" >                <ComboBox>maak een keuze</ComboBox>                <ComboBoxItem>continental V8 (85000 euro)</ComboBoxItem>                <ComboBoxItem>convertible (72000 euro)</ComboBoxItem>                <ComboBoxItem>mulsanne (65300 euro)</ComboBoxItem>                <RadioButton>blauw</RadioButton>                <RadioButton>groen (+250 euro)</RadioButton>                <RadioButton>rood (+700 euro)</RadioButton>            </StackPanel >        <StackPanel Margin="0,150,0,0"   Grid.Column="1">                <CheckBox>Bose audio speakers (+1250 euro)</CheckBox>                <CheckBox>Deluxe matjess (+450 euro)</CheckBox>                <CheckBox>Aluminium velgen (+300 euro)</CheckBox>            </StackPanel>                <!-- derde kolom-->        <StackPanel Grid.Column="2" >            <StackPanel >                <WrapPanel>                    <!-- image-->                    <Image Source="auto1.jpg"></Image>                </WrapPanel>            </StackPanel>

            <StackPanel >
                <WrapPanel Orientation="Vertical"  Margin="0,5,150,0" Width="65" Height="200">
                    <Image Source="/audioSpeaker.jpg" Margin="0,2,0,3"></Image>
                    <Image Source="/deluxeMatjes.jpg" Margin="0,2,0,3"></Image>                    <Image Source="/aluminiumVelgen.jpg" Margin="0,2,0,0"></Image>
                </WrapPanel>
            </StackPanel>        </StackPanel>        
    </Grid>
</Window>
